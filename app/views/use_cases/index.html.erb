<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <h2 class="page-header"> Caso de Uso </h2>
              <!-- NOTIFICACAO -->
              <% if notice %>
                 <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= notice %>
                 </div>
              <% end %>
            <div class="panel panel-default">
              <div class="panel-heading"> 
                   <i class="fa fa-briefcase fa-fw"></i> Caso de Uso
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                   <thead>
                    <tr>
                      <th>Nome</th>
                      <th>Descrição</th>
                      <th>Requisito</th>
                      <th></th>
                    </tr>
                  </thead>
                  
                  <tbody>
                    <% @use_cases.each do |use_case| %>
                      <tr>
                        <td><%= use_case.name %></td>
                        <td><%= use_case.description %></td>
                        <td><%= use_case.requirement.name %></td>
                        
                        <td><%= link_to use_case, class: "btn default btn-xs red" do %>
                           <i class="fa fa-edit fa-fw"></i>  
                           Gerenciar
                           <% end %> 
                           
                           <%= link_to edit_use_case_path(use_case), class: "btn default btn-xs purple" do %>
                              <i class="fa fa-edit fa-fw"></i>  
                              Editar
                              <% end %> 
                           
                           
                              <%= link_to use_case, method: :delete, data: { confirm: 'Are you sure?'},
                                     class: "btn default btn-xs black" do %>
                                    <i class="fa fa-times fa-fw"></i>  
                                    Excluir
                             <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



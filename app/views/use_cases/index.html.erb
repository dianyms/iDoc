<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Use Cases</h1>

                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Project</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @use_cases.each do |use_case| %>
                      <tr>
                        <td><%= use_case.name %></td>
                        <td><%= use_case.description %></td>
                        <td><%= use_case.project %></td>
                        <td><%= link_to 'Show', use_case %></td>
                        <td><%= link_to 'Edit', edit_use_case_path(use_case) %></td>
                        <td><%= link_to 'Destroy', use_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <br>

                <%= link_to 'New Use Case', new_use_case_path %>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

  </div>

   <div class="form-group">
      <label>Data de entrega</label>
      <%= f.date_select :delivery_date, class:"form-control" %> 
  </div>
  
   <div class="form-group">
      <label>Data de criação</label>
      <%= f.date_select :creation_date , class:"form-control" %> 
  </div>

   <div class="form-group">
     <label>Categoria</label>
     <%= collection_select(:project, :category_id, @category_options_select, :id, :name, {}, {class: "form-control"}) %>
  </div>
  
  <button type="submit" class="btn btn-primary">Salvar<i class="fa fa-check pull-left"></i>

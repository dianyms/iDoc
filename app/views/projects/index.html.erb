<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Todos projetos</h1>
                <p id="notice"><%= notice %></p>
                <table>
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Text</th>
                      <th>Delivery date</th>
                      <th>Creation date</th>
                      <th>Category</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @projects.each do |project| %>
                      <tr>
                        <td><%= project.title %></td>
                        <td><%= project.text %></td>
                        <td><%= project.delivery_date %></td>
                        <td><%= project.creation_date %></td>
                        <td><%= project.category %></td>
                        <td><%= link_to 'Show', project %></td>
                        <td><%= link_to 'Edit', edit_project_path(project) %></td>
                        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

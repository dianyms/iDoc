<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Requirements</h1>
                <p id="notice"><%= notice %></p>

                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Type</th>
                      <th>Project</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @requirements.each do |requirement| %>
                      <tr>
                        <td><%= requirement.name %></td>
                        <td><%= requirement.description %></td>
                        <td><%= requirement.type %></td>
                        <td><%= requirement.project %></td>
                        <td><%= link_to 'Show', requirement %></td>
                        <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
                        <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <br>
                
                <%= link_to 'New Requirement', new_requirement_path %>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
          <h2 class="page-header"> Glossário </h2>
              <!-- NOTIFICACAO -->
              <% if notice %>
                 <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= notice %>
                 </div>
              <% end %>
            <div class="panel panel-default">
              <div class="panel-heading"> 
                   <i class="fa fa-briefcase fa-fw"></i> 
                   Glossário
                    <%= link_to new_glossary_path, class: "btn default btn-xs green pull-right" do %>
                          <i class="fa fa-plus fa-fw"></i>  
                          Adicionar
                    <% end %> 
                     <%= link_to report_glossary_path(@glossaries, format: "pdf"), class: "btn default btn-xs red pull-right" do %>
                                    <i class="fa fa-edit fa-fw"></i>  
                                    Relatório
                             <% end %> 
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                     <thead>
                        <tr>
                          <th>Termo</th>
                          <th>Descrição</th>
                          <th>Sinônimo</th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      
                      <tbody>
                        <% @glossaries.each do |glossary| %>
                          <tr>
                            <td><%= glossary.term %></td>
                            <td><%= glossary.description %></td>
                            <td><%= glossary.synonymous %></td>
                            <td><%= link_to edit_glossary_path(glossary), class: "btn default btn-xs purple" do %>
                                    <i class="fa fa-edit fa-fw"></i>  
                                    Editar
                             <% end %>  
                             
                             <td><%= link_to glossary, method: :delete, data: { confirm: 'Are you sure?'},
                                     class: "btn default btn-xs black" do %>
                                    <i class="fa fa-times fa-fw"></i>  
                                    Excluir
                             <% end %>  
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



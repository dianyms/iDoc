<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Scenario</h1>
                <p id="notice"><%= notice %></p>
                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Type</th>
                      <th>Use case</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @scenarios.each do |scenario| %>
                      <tr>
                        <td><%= scenario.name %></td>
                        <td><%= scenario.description %></td>
                        <td><%= scenario.type %></td>
                        <td><%= scenario.use_case %></td>
                        <td><%= link_to 'Show', scenario %></td>
                        <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
                        <td><%= link_to 'Destroy', scenario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <br>
                
                <%= link_to 'New Scenario', new_scenario_path %>
                
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

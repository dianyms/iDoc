<!-- Page Content -->
<div id="page-wrapper">
    <div class="content" data-pjax-container=""><script>
          $('.nav.nav-pills li.active').removeClass('active');
          $('.nav.nav-pills li[data-model="project"]').addClass('active');
        </script>
            <div class="page-header">
                <h1 class="">Cenários</h1>
            </div>
              <!-- NOTIFICACAO -->
              <% if notice %>
                 <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= notice %>
                 </div>
              <% end %>
           <div class="row">
              <div class="col-lg-12">   
                <div class="panel panel-default">
                  <div class="panel-heading"> 
                       <i class="fa fa-briefcase fa-fw"></i> 
                       Cenários 
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                    <div class="table-responsive">
                      <label>Filtra por Caso de Uso</label>
                      <%= collection_select(:scenario, :use_case_id, @usecase_options_select, :id, :name, {}, {class: "form-control"}) %>
                      <br>
                      <table class="table table-striped table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Tipo</th>
                            <th>Caso de Uso</th>
                            <th></th>
                          </tr>
                        </thead>
                        
                        <tbody>
                        <% @scenarios.each do |scenario| %>
                          <tr>
                            <td><%= scenario.name %></td>
                            <td><%= scenario.description %></td>
                            <td><%= scenario.scenario_type %></td>
                            <td><%= scenario.use_case.name %></td>
                            <td><%= link_to scenario, class: "btn default btn-xs red" do %>
                                  <i class="fa fa-edit fa-fw"></i>  
                                  Gerenciar
                               <% end %> 
                           
                            <%= link_to edit_scenario_path(scenario), class: "btn default btn-xs purple" do %>
                                  <i class="fa fa-edit fa-fw"></i>  
                                  Editar
                            <% end %> 
                           <%= link_to scenario, method: :delete, data: { confirm: 'Are you sure?'},
                                         class: "btn default btn-xs black" do %>
                                        <i class="fa fa-times fa-fw"></i>  
                                        Excluir
                                 <% end %>  
                          </tr>
                        <% end %>
                      </tbody>
                        </table>
                      </div>
                      <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
            </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



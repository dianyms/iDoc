<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
           <h2 class="page-header"> Cenário </h2>
              <!-- NOTIFICACAO -->
              <% if notice %>
                 <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= notice %>
                 </div>
              <% end %>
              
           <div class="panel panel-default">
            <div class="panel-heading"> 
                 <i class="fa fa-briefcase fa-fw"></i> 
                 Cenário
            </div>
            
             <!-- /.panel-heading -->
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>Nome</th>
                          <th>Descrição</th>
                          <th>Tipo</th>
                          <th>Caso de Uso</th>
                        </tr>
                      </thead>
                      
                      <tbody>
                        <tr>
                          <td><%= @scenario.name %></td>
                          <td><%= @scenario.description %></td>
                          <td><%= @scenario.scenario_type %></td>
                          <td><%= @scenario.use_case.name %></td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.col-lg-12 -->

         <div class="panel panel-default">
            <div class="panel-heading"> 
                 <i class="fa fa-briefcase fa-fw"></i> 
                 Passos Cenário 
                <%= link_to new_step_scenario_path, class: "btn default btn-xs green pull-right" do %>
                        <i class="fa fa-plus fa-fw"></i>  
                        Adicionar
                <% end %> 
            </div>
            
             <!-- /.panel-heading -->
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                       <thead>
                      <tr>
                        <th>Sequence</th>
                        <th>Description</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>
                    
                    <tbody>
                    <% @step_scenarios.each do |step_scenario| %>
                      <tr>
                        <td><%= step_scenario.sequence %></td>
                        <td><%= step_scenario.description %></td>
                        
                        <td><%= link_to  step_scenario, class: "btn default btn-xs red" do %>
                                  <i class="fa fa-edit fa-fw"></i>  
                                  Mostrar
                               <% end %> 
                           
                           <%= link_to edit_step_scenario_path(step_scenario), class: "btn default btn-xs purple" do %>
                                  <i class="fa fa-edit fa-fw"></i>  
                                  Editar
                           <% end %> 
                           
                        <button type="submit" class="btn default btn-xs black"><i class="fa  fa-times fa-fw"></i> Excluir</button></td>
                      </tr>
                    <% end %>
                  </tbody>
                  </table>
                </div>
                  <!-- /.table-responsive -->
              </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->